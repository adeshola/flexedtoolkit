<?xml version="1.0" encoding="utf-8"?>
<!--A very BASIC entry form. With just a few fields layed out in one column.-->
<component columns="1" vgap="5" igap="1">
	<group label="Personal" column="1">
		<row>
			<field id="fname" label="Full Name">
				<widget type="text" default="Shankar" editable="true" validate="true" notnull="true" datatype="string" fieldelementid="fname"/>
			</field>
		</row> 
		<row>
			<field id="age" label="Age">
				<widget type="stepper" default="35" min="2" max="80" editable="true"/>
			</field>
		</row>
		<row>
			<field id="gender" label="Gender">
				<widget type="radiogroup">
					<item data="male" label="Male" selected="true"/>
					<item data="female" label="Female"/>
				</widget>
			</field>
		</row>
	</group>
</component>