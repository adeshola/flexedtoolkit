<?xml version="1.0" encoding="utf-8"?>
<!--A very BASIC entry form. With just a few fields layed out in one column.-->
<component columns="1" vgap="5" igap="1">
	<group name="Personal" column="1">
		<row>
			<field id="fname" name="Full Name">
				<widget type="text" editable="true" validate="true" notnull="true" datatype="string" fieldelementid="fname"/>
			</field>
		</row> 
		<row>
			<field id="age" name="Age">
				<widget type="NumericStepper" min="2" max="4095" editable="true"/>
			</field>
		</row>
		<row>
			<field id="gender" name="Gender">
				<widget type="Display" height="15" width="120"/>
			</field>
		</row>
	</group>
</component>